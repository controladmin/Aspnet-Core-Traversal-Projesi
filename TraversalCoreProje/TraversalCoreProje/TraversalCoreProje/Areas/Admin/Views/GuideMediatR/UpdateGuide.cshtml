@model EntityLayer.Concreate.Guide
@{
    ViewData["Title"] = "UpdateGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehber Güncelleme Sayfası</h1>


<form method="post">
    <label>Rehber Adı</label>
    <input type="text" asp-for="Name" class="form-control" required=""/>
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label>Rehber Açıklaması</label>
    <input type="text" asp-for="Description" class="form-control" required=""/>
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
</form>

