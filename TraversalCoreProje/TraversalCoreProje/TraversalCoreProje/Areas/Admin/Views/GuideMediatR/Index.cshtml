@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}


<style>
    tr:nth-child(odd) {
        background: #faf0e6;
    }

    tr:nth-child(even) {
        background: #20b2aa;
    }

    .table thead tr th {
        background: #191970;
        color: white !important;
    }
</style>

<h1>MediatR Rehber Listesi</h1>
<br />
<table class="table table-striped table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Rehber Adı</th>
            <th>Açıklama</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sayac++;
            <tr>
                <td>@sayac</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td><a href="/Admin/GuideMediatR/DeleteGuide/@item.GuideID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Admin/GuideMediatR/UpdateGuide/@item.GuideID" class="btn btn-outline-primary">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/GuideMediatR/AddGuide/" class="btn btn-outline-dark">Yeni Rehber Girişi</a>
