@model IEnumerable<BookingHotelSearchViewModel.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
    double score;
}


<style>
    tr:nth-child(odd) {
        background: #c0c0c0;
    }

    tr:nth-child(even) {
        background: #87ceeb;
    }

    .table thead tr th {
        background: #ee82ee;
        color: white !important;
    }
</style>

<h1>Api Booking Rezervasyon Sayfası</h1>

<h3>Arama Yapılan Şehir: Paris / Fransa</h3>

<table class="table table-bordered table table-hover text-center">
    <thead>
        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Otel Puanı</th>
            <th>Otel Değerlendirmesi</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sayac++;
            <tr>
                <td>@sayac</td>
                <td>@item.hotel_name</td>
                @{ score =double.Parse(item.review_score.ToString()) / 10;}
                <td>@score</td>
                @*<td>@item.review_score</td>*@
                <td>@item.review_score_word</td>
                <td><a href="#" class="btn btn-outline-warning">Detaylar</a></td>
            </tr>
        }
    </tbody>
</table>

