@using EntityLayer.Concreate
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<style>
    tr:nth-child(odd) {
        background: #b0e0e6;
    }

    tr:nth-child(even) {
        background: #afeeee;
    }

    .table thead tr th {
        background: #2e8b57;
        color: white !important;
    }
 
    img{
        border-radius:50%;
        height:100px;
        width:100px;
    }
   
</style>

<h1>Rehber Listesi</h1>

<table class="table table-bordered table table-hover text-center">
    <thead>
        <tr>
            <th>#</th>
            <th>Görsel</th>
            <th>Ad Soyad</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
           count += 1; 
        <tr>
            <td>@count</td>
            <td><img src="@item.Image"/></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
                @{ 
                    if (item.Status == true)
                    {
                        <td><a href="/Admin/Guide/ChangeToFalse/@item.GuidID" class="btn btn-outline-dark">Pasif Yap</a></td>
                    }
                    else
                    {
                            <td><a href="/Admin/Guide/ChangeToTrue/@item.GuidID" class="btn btn-outline-dark">Aktif Yap</a></td>
                    }
                    }
            <td><a href="/Admin/Guide/UpdateGuide/@item.GuidID" class="btn btn-outline-warning">Güncelle</a></td>
            <td><a href="/Admin/Guide/DeleteGuide/@item.GuidID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
        }
    </tbody>
</table>
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Girişi</a>
