@model List<AnnouncementListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<style>
    tr:nth-child(odd) {
        background: #00ffff;
    }

    tr:nth-child(even) {
        background: #7fffd4;
    }

    .table thead tr th {
        background: #d2691e;
        color: white !important;
    }
</style>

<h1>Duyuru Listesi</h1>

<table class="table table-bordered table table-hover text-center">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>İçerik</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
                {
                    sayac++;
        <tr>
            @*<td>@item.AnnouncementID</td>*@
            <td>@sayac</td>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td><a href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementID/" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementID/" class="btn btn-outline-primary">Güncelle</a></td>
            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
        </tr>
            }
    </tbody>
</table>
<br />
<a href="/Admin/Announcement/AddAnnouncement/" class="btn btn-outline-secondary">Yeni Duyuru Girişi</a>

