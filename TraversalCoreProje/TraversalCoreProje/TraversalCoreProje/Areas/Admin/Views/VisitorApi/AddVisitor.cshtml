@model VisitorViewModel
@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api Ziyaretçi Ekleme Sayfası</h1>
<br />
<form method="post">
    <label>Ziyaretçi Adı</label>
    <input type="text" class="form-control" asp-for="Name" placeholder="Ziyaretçi Adını Giriniz" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label>Ziyaretçi Soyadı</label>
    <input type="text" class="form-control" asp-for="Surname" placeholder="Ziyaretçi Soyadını Giriniz" />
    <span asp-validation-for="Surname" class="text-danger"></span>
    <br />
    <label>Ziyaretçi Şehir</label>
    <input type="text" class="form-control" asp-for="City" placeholder="Ziyaretçi Şehrini Giriniz" />
    <span asp-validation-for="City" class="text-danger"></span>
    <br />
    <label>Ziyaretçi Ülke</label>
    <input type="text" class="form-control" asp-for="Country" placeholder="Ziyaretçi Ülkesini Giriniz" />
    <span asp-validation-for="Country" class="text-danger"></span>
    <br />
    <label>Ziyaretçi Mail</label>
    <input type="text" class="form-control" asp-for="Mail" placeholder="Ziyaretçi Mail Adresini Giriniz" />
    <span asp-validation-for="Mail" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-primary">Ziyaretçi Oluştur</button>
</form>

