@model IEnumerable<BookingExchangeViewModel2.Exchange_Rates>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<style>
    tr:nth-child(odd) {
        background: #c0c0c0;
    }

    tr:nth-child(even) {
        background: #87ceeb;
    }

    .table thead tr th {
        background: #ee82ee;
        color: white !important;
    }
</style>


<h1>Api Booking Kur Bilgileri</h1>
<br />
<table class="table table-striped table table-hover text-center">
    <thead>
        <tr>
            <th>#</th>
            <th>Kur Adı</th>
            <th>Kur Oranı</th>
        </tr>
    </thead>
    <tbody>
            @foreach(var item in Model)
            {
                sayac++;
                <tr>
                    <td>@sayac</td>
                    <td>@item.currency</td>
                    <td>@item.exchange_rate_buy</td>
                </tr>
            }
    </tbody>
</table>
