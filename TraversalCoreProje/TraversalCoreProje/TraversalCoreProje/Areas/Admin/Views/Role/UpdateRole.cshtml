@model UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>
<br />
<form method="post">
    <input type="hidden" asp-for="RoleID" />
    <label>Rol Adını Giriniz</label>
    <input type="text" asp-for="RoleName" class="form-control" />
    <span asp-validation-for="RoleName" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-primary">Rol Güncelle</button>
</form>

