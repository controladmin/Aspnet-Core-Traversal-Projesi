@using EntityLayer.Concreate
@model List<Reservation>
@{
    ViewData["Title"] = "MyApprovalReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    int sayac = 0;
}

<style>
    tr:nth-child(odd) {
        background: #f5f5f5;
    }

    tr:nth-child(even) {
        background: #c0c0c0;
    }

    .table thead tr th {
        background: #708090;
        color: white !important;
    }
</style>

@*if(Model.Count<1) de diyebilirdik*@

@if (!Model.Any())
{
    <h4 style="color:red;">Onay Bekleyen Rezervasyon Bulunmamaktadır</h4>
}

@*else
{
    <table class="table table-bordered table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Lokasyon</th>
                <th>Kişi Sayısı</th>
                <th>Rezervasyon Tarihi</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                sayac++;
                <tr>
                    <td>@sayac</td>
                    <td>@item.Destination.City</td>
                    <td>@item.PersonCount</td>
                    <td>@item.ReservationDate</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>
}*@

else
{
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Onay Bekleyen Rezarvasyonlar</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Web sitemiz traversal üzerinde yapmış olduğunuz onay bekleyen rezarvasyon listenize aşağıdan ulaşabilirsiniz </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Lokasyon</th>
                                    <th>Kişi Sayısı</th>
                                    <th>Rezervasyon Tarihi</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    sayac++;
                                <tr>
                                    <td>@sayac</td>
                                    <td>@item.Destination.City</td>
                                    <td>@item.PersonCount</td>
                                    <td>@item.ReservationDate</td>
                                    <td>@item.Status</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}



