@using EntityLayer.Concreate
@model List<Destination>
@{
    ViewData["Title"] = "GetCitiesSearchByName";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    int sayac = 0;
}


<style>
    tr:nth-child(odd) {
        background: #bdb76b;
    }

    tr:nth-child(even) {
        background: #fff8dc;
    }

    .table thead tr th {
        background: #8a2be2;
        color: white !important;
    }
</style>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Tur Rotası Arayın</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Aktif tur rotalarına bu sayfadan ulaşabilirsiniz </p>
                    <!--şehir araması yapmak için yazılan kodlar-->
                    <form asp-action="GetCitiesSearchByName" method="get" asp-area="Member">
                        <div>
                            <p>
                                <b>Lütfen aranacak şehri giriniz:</b>  <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" />
                                <br />
                                <input type="submit" value="Şehir Ara" class="btn btn-outline-info" />
                            </p>
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Şehir</th>
                                    <th>Süre</th>
                                    <th>Kapasite</th>
                                    <th>Fiyat</th>
                                    <th>Detaylar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    sayac++;
                                    <tr>
                                        <td>@sayac</td>
                                        <td>@item.City</td>
                                        <td>@item.DayNight</td>
                                        <td>@item.Capacity</td>
                                        <td>@item.Price</td>
                                        <td><a href="/Destination/DestinationsDetails/@item.DestinationID" class="btn btn-outline-info">Detaylar</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


