<!--Comment Default partial sayfasında yorum ekleme çalışmadığı için CommentController ekledik partial olarak kullanıyoruz ajax ile yapacağız-->

<!--kullanıcı giriş yapmadı ise yorum yapmasın diye if şartı koyduk-->
@if (User.Identity.IsAuthenticated)
{
    <div class="leave-comment-form mt-5" id="reply">
        <h4 class="side-title mb-2">Yorum Bırak</h4>
        <p class="mb-4">
            İşaretli alanları doldurmanız gerekmektedir!!!*
        </p>

        <form method="post" asp-action="AddComment" asp-controller="Comment">
            <input type="hidden" name="DestinationID" value="@ViewBag.destID" />
            <input type="hidden" name="AppUserID" value="@ViewBag.userID" />
            <div class="form-group">
                <textarea name="CommentContent" class="form-control" placeholder="Yorumunuz*" required=""
                          spellcheck="false"></textarea>
            </div>
            @*<div class="input-grids row">

                    <div class="form-group col-lg-6">
                        <input type="text" name="CommentUser" class="form-control" placeholder="Adınız Soyadınız*"
                               required="">
                    </div>
                    <div class="form-group col-lg-6">
                        <input type="text" name="DestinationID" class="form-control" placeholder="Email*"  required="">
                    </div>
                </div>*@

            <div class="submit text-right">
                <button class="btn btn-style btn-primary">Yorum Yap </button>
            </div>
        </form>
    </div>
}
else
{
    <h2>Yorum yapabilmeniz için üye olmanız gereklidir</h2>
}
<!--bu script kodu ajax'sın çalışması için gerekli'-->
